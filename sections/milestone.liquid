<section class="mile-stone-wrapper" id="milestone-origin">
  <div class="milestone-container">
    <div class="milestoner-header">
      {{ section.settings.locations }}
      <p>& Other Countries</p>
    </div>
    <div class="milestones-blocks-wrapper">
      {% for block in section.blocks %}
        <div class="mile-stone-item">
          <div class="mile-image">
            <img src="{{ block.settings.origin | img_url: '' }}" width="100" height="100" alt="{{ block.settings.title }}" class="lazyload" loading="lazy"/>
          </div>
          <div class="mile-container">
            <span class="mile-pointer"><div class="circle-marker"></div></span>
            <div class="content-mile">
              <h3>{{ block.settings.title }}</h3>
              <p>{{ block.settings.subtitle }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Milestone",
    "settings": [
      {
        "id" : "locations",
        "type" : "textarea",
        "label" : "Location/Origins",
        "info" : "Enclose each locations between <span></span>"
      }
    ],
    "blocks" : [
      {
        "name" : "Milestones",
        "type" : "image",
        "settings" : [
          {
            "id" : "origin",
            "type" : "image_picker",
            "label" : "Milestone Image"
          },
          {
            "id" : "title",
            "type" : "text",
            "label" : "Milestone Name"
          },
          {
            "id" : "subtitle",
            "type" : "textarea",
            "label" : "Milestone Description"
          }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Milestone",
        "category" : "custom"
      }
    ]
  }
{% endschema %}

