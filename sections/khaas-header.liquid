<section class="khaas-collection-header">
  <div class="header-wrapper-khaas">
    <picture>
      <link rel="preload" src="{{ section.settings.m_img | img_url: '600x' }}">
      <source srcset="{{ section.settings.m_img | img_url: '600x' }}" media="(max-width: 650px)">
      <source srcset="{{ section.settings.d_img | img_url: 'master' }}" media="(min-width: 651px)">
      <img src="{{ section.settings.d_img | img_url: 'master' }}" alt="" loading="eager" width="100" height="100">
    </picture>
  </div>
</section>

{% stylesheet %}
.header-wrapper-khaas picture img{
  width: 100%;
  height: auto;
  object-fit: cover;
}
{% endstylesheet %}
{% schema %}
  {
    "name": "Khaas Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "d_img",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "m_img",
        "label": "Mobile Image"
      }
    ],
    "presets": [
      {
        "name": "Khaas Header"
      }
    ]
  }
{% endschema %}