<hr style="background-color:{{ section.settings.background }}" class="borderring-red">

<div class="discoverrange discover--{{ template.name }}" style="background-color:{{ section.settings.background }}">
  <div class="discoverinner page-width">
    <div class="discoverhead">
{%  if section.settings.heading != blank %}
  <h3>{{ section.settings.heading }}</h3>
{%  endif %}
{%  if section.settings.content != blank %}
{{ section.settings.content }}
{%  endif %}
</div>
  <div class="swiper-discover">
    <div class="swiper-wrapper-discover">
      {% for block in section.blocks %}
        {%  if block.settings.image != blank %}
      <div class="swiper-slide-discover">
        <a href="{{ block.settings.link }}">
        <img src="{{ block.settings.image |img_url:'' }}" alt="{{ block.settings.image.alt }}"/>
        </a>
      </div>
          {%  endif %}
      {%  endfor %}
    </div>
  </div>
  </div>
</div>
