{% schema %}
  {
    "name": "Discover range",
    "settings": [
      {
        "type":"textarea",
        "id":"heading",
        "label":"Heading"
      },
       {
        "type":"richtext",
        "id":"content",
        "label":"Content"
      },
      {
        "type":"color",
        "label":"Background Color",
        "id":"background"
      }
    ],
    "blocks":[
      {
        "name":"discover range",
        "type":"text",
        "settings":[
          {
        "type":"image_picker",
        "id":"image",
        "label":"Discover Image"
      },
      {
        "type":"url",
        "id":"link",
        "label":"Link"
      }
        ]
      }
    ],
    "presets":[
      {
        "name":"Discover range"
      }
    ]
  }
{% endschema %}

